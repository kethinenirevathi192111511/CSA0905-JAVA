import java.util.*;
 class Rev 
 {
    public static void main(String args[])
    {
        Scanner s = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int number = s.nextInt();
        if (number % 2 == 0) {
            System.out.println(number + " is even.");
        } 
        else
        {
            System.out.println(number + " is odd.");
        }
    }
}
