import java.util.*;
public class Rev
{
    public static void main(String args[]) 
{
int a,b,c;
        Scanner s = new Scanner(System.in);
        System.out.print("Enter the first number: ");
         a =s.nextDouble();
        System.out.print("Enter the second number: ");
         b = s.nextDouble();
        c = a + b;
        System.out.println("The sum of " + a+ " and " + b+ " is: " + c);


    }
}
